<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contacteJa"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/avi"
    android:text="Avi"
    android:textSize="25sp"
    android:typeface="monospace"
    android:textStyle="bold"
    android:textColor="#818285"
    android:textAlignment="center"
    android:layout_marginTop="50dp"
    ></TextView>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow android:paddingTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edat: "
                android:textSize="15sp" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="84 anys "
               android:textSize="15sp"/>
        </TableRow>
        <TableRow android:paddingTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habitació: "
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="32 " />
        </TableRow>
        <TableRow android:paddingTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor/a: " />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dra Grey " />
        </TableRow>
        <TableRow android:paddingTop="10dp">
            <ImageButton
                android:id="@+id/contact1"
                android:layout_height="100dp"
                android:layout_width="50dp"
                android:src="@drawable/descarga"
                ></ImageButton>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eva Gutierrez " />
        </TableRow>
        <TableRow android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <ImageButton
               android:id="@+id/contact2"
               android:layout_height="100dp"
               android:layout_width="50dp"
               android:src="@drawable/descargaHombre"
               ></ImageButton>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jaume Fadó " />
        </TableRow>
    </TableLayout>
</LinearLayout>
